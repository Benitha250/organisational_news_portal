{{#partial "content"}}

    {{#if users}}
        <div class="row list">
        {{#each users as |u| }}
            <div class="col-md-4" style="color:black">
                <div>
                    <p id={{u.id}}>{{u.name}}</p><br>
                    <p id={{u.id}}>{{u.position}}</p><br>
                    <p id={{u.id}}>{{u.staff_role}}</p><br>
                </div>
                <br>
            </div>
        {{/each}}
        </div>
    {{else}}
        <p class="text">There are no user, register here <a href="/create/user">here</a></p>
    {{/if}}

{{/partial}}

{{> layout.hbs}}